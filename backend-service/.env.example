# Application
APP_NAME=LexiLingo Backend Service
APP_ENV=development
API_V1_PREFIX=/api/v1
DEBUG=True
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://lexilingo:lexilingo_pass@localhost:5432/lexilingo
DB_ECHO=False
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

