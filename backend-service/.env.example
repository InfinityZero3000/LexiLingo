# Application
APP_NAME=LexiLingo Backend Service
APP_ENV=development
API_V1_PREFIX=/api/v1
DEBUG=True
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://lexilingo:lexilingo_pass@localhost:5432/lexilingo
DB_ECHO=False
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Security
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (Flutter app origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:52000

# Logging
LOG_LEVEL=INFO

# AI Service URL (optional - for future integration)
AI_SERVICE_URL=http://localhost:8001/api/v1

# Firebase Auth (optional - for verifying Firebase ID tokens)
FIREBASE_PROJECT_ID=
# One of the following must be provided
# Paste JSON directly (escape quotes/newlines if needed)
FIREBASE_CREDENTIALS_JSON=
# Or point to a JSON file path
# FIREBASE_CREDENTIALS_FILE=./firebase-service-account.json

# Google OAuth
# Get these from Google Cloud Console -> APIs & Services -> Credentials
# Flutter app Client ID (from Firebase project)
GOOGLE_CLIENT_ID=your-firebase-google-client-id.apps.googleusercontent.com
# Web Admin Client ID (separate OAuth credential)
GOOGLE_ADMIN_CLIENT_ID=your-web-admin-google-client-id.apps.googleusercontent.com
