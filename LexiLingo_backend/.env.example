# Environment
ENVIRONMENT=development  # development | staging | production

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=lexilingo

# For production (MongoDB Atlas):
# MONGODB_URI=***REMOVED***

# Redis Configuration (for caching & sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# Or use Redis URL:
# REDIS_URL=redis://:password@host:port/db

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# API Configuration
API_VERSION=1.0.0
API_TITLE=LexiLingo Backend API
API_DESCRIPTION=Backend API for LexiLingo AI-powered language learning

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Redis (optional, for caching)
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR

# DL Model Service (for AI analysis)
DL_MODEL_API_URL=http://localhost:8001
DL_MODEL_API_KEY=

# Vercel (auto-detected, no need to set)
# VERCEL=1
# VERCEL_ENV=production
