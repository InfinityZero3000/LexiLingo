{
  "version": 2,
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/main.py"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "MONGODB_URI": "@mongodb_uri",
    "GEMINI_API_KEY": "@gemini_api_key",
    "ALLOWED_ORIGINS": "https://lexilingo.vercel.app,https://www.lexilingo.com",
    "API_VERSION": "1.0.0"
  },
  "functions": {
    "api/main.py": {
      "maxDuration": 30,
      "memory": 512
    }
  }
}
